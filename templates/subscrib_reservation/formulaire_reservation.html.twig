{% extends 'base.html.twig' %}

{% block title %}ma réservation{% endblock %}
{% block stylesheets %} 

<link href="https://cdn.jsdelivr.net/npm/smartwizard@5/dist/css/smart_wizard_all.min.css" rel="stylesheet" type="text/css" />

{% endblock %}

{% form_theme reservationForm 'bootstrap_4_layout.html.twig' %}


{% block body %}
    <section class"bloc-souscription">

        {{ form_start(reservationForm) }}

        <div class="my-5" id="smartwizard">

            <ul class="nav mb-5 w-50 mx-auto">
                <li class="nav-item">
                <a class="nav-link" href="#step-1">
                    
                </a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#step-2">
                    
                </a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#step-3">
                    
                </a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#step-4">
                    
                </a>
                </li>
            </ul>

            <div class="tab-content px-4">

                

                <div id="step-1" class="step-design step-one-reservation  mx-auto w-50" >

                    <div class="row">
                        <div class="col-md-6">
                                {{ form_row(reservationForm.nom, {'attr': {'placeholder': 'Nom ', 'required':'required'}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(reservationForm.prenom, {'attr': {'placeholder': 'Prénom ', 'required':'required'}}) }}
                        
                        </div>

                        <div class="col-md-8">
                            {{ form_row(reservationForm.email, {'attr': {'placeholder': 'Adresse mail', 'required':'required'}}) }}
                        
                        </div>
                        <div class="col-md-8">
                            {{ form_row(reservationForm.telephone, {'attr': {'placeholder': 'Numéro de téléphone ','required':'required'}}) }}
                        
                        </div>
                        <div class="col-md-8">
                            {{ form_row(reservationForm.adresse, {'attr': {'placeholder': 'Adresse postale ', 'required':'required'}}) }}
                        
                        </div>

                        <div class="col-md-6">
                            {{ form_row(reservationForm.ville, {'attr': {'placeholder': 'Ville ', 'required':'required'}}) }}

                        </div>
                        <div class="col-md-6">
                            {{ form_row(reservationForm.code_postal, {'attr': {'placeholder': 'Code postal ', 'required':'required'}}) }}
                        
                        </div>
                    </div>
                    
                    

                </div>

                <div id="step-2" class="w-75  step-design mx-auto" style="display:none;">
                   
                    <div class="row font-weight-bold">
                        <div class="col-md-7">
                            <h4 class="font-weight-bold mb-4">Récapitulatif des dates de séjour</h4>
                            <p>Chambre : <span> Endormi </span></p>

                            <div class="row">
                                <div class="col-md-6">
                                    <p>Date de début :</p>
                                    {{ form_row(reservationForm.date_debut) }}
                                    
                                </div>
                                <div class="col-md-6">
                                    <p>Date de fin :</p>
                                    {{ form_row(reservationForm.date_fin) }}

                                </div>
                            </div>
                        </div>

                        <div class="col-md-5">
                            <div class="text-center">
                                <h4 class="font-weight-bold mb-4">Réservation</h4>
                            </div>
                            <div class="bg-marron-step p-5">
                                <p>CHAMBRE ENDORMI</p>
                                <p class="text-muted">Du <span>22 avril 2021</span> au <span>12 mai  2021</span></p>
                                <p class="text-muted">Pour <span>2 voyageurs</span></p>
                                <p class="text-muted">Total: <span>1890 £</span></p>
                            </div>
                        </div>

                        
                    </div>
                </div>

                <div id="step-3" class="w-50 mx-auto step-three" style="display:none;">
                    <div class="text-center">
                        <h3 class="font-weight-bold">Paiement</h3>
                        <p>Choisissez votre méthode de Paiement</p>
                    </div>

                    <div class="row pt-5">
                        <div class="col-md-6">
                            <h5 class="font-weight-bold mb-3">Adresse de facturation</h5>

                            {{ form_row(reservationForm.carte_nom_prenom, {'label':'NOM ET PRÉNOM','attr': { 'required':'required'}}) }}
                            {{ form_row(reservationForm.carte_adresse, {'label':'ADRESSE','attr': { 'required':'required'}}) }}
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(reservationForm.carte_ville, {'label':'VILLE','attr': { 'required':'required'}}) }}
                                </div>
                                <div class="col-md-4 pl-0">
                                    {{ form_row(reservationForm.carte_codepostal, {'label':'CODE POSTAL','attr': { 'required':'required'}}) }}
                                </div>
                            </div>
                            {{ form_row(reservationForm.carte_pays, {'label':'PAYS','attr': { 'required':'required'}}) }}
                            {{ form_row(reservationForm.carte_telephone, {'label':'TÉLÉPHONE','attr': { 'required':'required'}}) }}


                        </div>

                        <div class="col-md-6">
                            <h5 class="font-weight-bold mb-3">Type de paiement</h5>

                            <div class="row">
                                <div class="col-md-10">
                                    {{ form_row(reservationForm.carte_numero, {'label':'NUMÉRO DE CARTE','attr': { 'required':'required'}}) }}
                                </div>
                                <div class="col-md-2 px-0">

                                <div class="form-group">
                                    <div class="mt-4 pt-2">
                                    <img src="{{ asset('assets/img/clement-helardot-95YRwf6CNw8-unsplash.jpg') }}" width="50px" alt="">
                                    </div>
                                </div>
                                
                                </div>
                            </div>

                            {{ form_row(reservationForm.carte_proprio, {'label':'NOM APPARAISSANT SUR LA CARTE','attr': { 'required':'required'}}) }}
                            
                            {{ form_row(reservationForm.carte_date_fin, {'label':'DATE D\'EXPIRATION','attr': { 'required':'required'}}) }}
                            <div class="w-75">
                                {{ form_row(reservationForm.carte_cw, {'label':'CW','attr': { 'required':'required'}}) }}
                            </div>


                        </div>
                    </div>

                    


                </div>


                <div id="step-4" class="w-75  mx-auto" style="display:none;">
                    <div class="text-center mb-4">
                        <h3 class="font-weight-bold">Confirmation de paiement</h3>
                    </div>

                    <div class="row mt-5">
                        <div class="col-md-7">
                            <div class="bg-marron-step step-four p-5">
                                <div class="text-center">
                                    <h4 class="font-weight-bold">Récapitulatif de la réservation</h4>
                                </div>

                                <h5 class="font-weight-bold pt-5 pb-4">CHAMBRE ENDORMI</h5>
                                <p>Du <span>22 avril 2021</span> au <span>12 mai 2021</span></p>
                                <p>Prix: <span>90 £ x </span> <span> 21 nuits</span></p>
                                <h5 class="font-weight-bold pt-5 pb-4">Numéro de carte utilisée : <span> MASTERCARD 0000</span></h5>
                                <h5 class="font-weight-bold">Solde total <span class="text-muted">: 1890 £</span></h5>
                                
                            </div>
                        </div>
                        <div class="col-md-5 mt-5 py-5">
                            <div class="step-four border">
                                <div class="text-center">
                                    <h6 class="font-weight-bold pt-5 pb-4">Votre numéro de réservation est le <span>43CD53</span></h6>
                                </div>
                                <div class="px-5">
                                    <p>John Doe</p>
                                    <p>John.doe@gmail.com</p>
                                    <p>00 00 00 00 00</p>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="text-center my-5">
                        <button type="submit" class="btn w-25 bg-marron text-light">Envoyer</button>
                    </div>


                    <div class="text-center font-weight-bold text-muted my-5">
                        <p>Pour toute demande d’information ou d’annulation, merci de nous contacter directement</p>
                        <a class="btn bg-marron w-25" href="{{ path('nous_contacter') }}">
                            <h5 class="text-light my-2"> NOUS CONTACTER </h5>
                        </a>
                    
                    </div>
                    
                </div>

                

            </div>
        </div>

        
        {{ form_end(reservationForm) }}
    </section>
{% endblock %}



{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/smartwizard@5/dist/js/jquery.smartWizard.min.js" type="text/javascript"></script>



    <script type="text/javascript">
    $(document).ready(function() {

        $('#smartwizard').smartWizard({
            theme:'dots',
            enableURLhash: false,
            
            toolbarSettings: {
                toolbarPosition: 'bottom', // none, top, bottom, both
                toolbarButtonPosition: 'center', // left, right, center
                showNextButton: true, // show/hide a Next button
                showPreviousButton: false,
                toolbarExtraButtons: []
            },
            
            lang: { next: 'continuer'},
            
        });


        //$("#smartwizard").on("leaveStep", function(e, anchorObject, stepNumber,stepDirection) {
            
            //return false;
        //});

       

    });
    
    </script>

{% endblock %}
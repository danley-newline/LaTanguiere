{% extends 'base.html.twig' %}

{% block title %}Espace Contact{% endblock %}

{% form_theme contactForm 'bootstrap_4_layout.html.twig' %}


{% block body %}
    <section>
        <div class="container">
            <div class="my-5 pt-5">
                <div class="row contact-title w-100">
                    <div class="col-md-6 text-center py-3">
                        <h1>N'hésitez pas <br> à nous contacter !</h1>
                    </div>
                    <div class="col-md-6">
                    <img src="{{ asset('assets/img/google.png') }}" class="w-100">
                    </div>
                </div>
            </div>

            <div class="py-5 text-center">
                <h3>Une demande ?  Ou simplement un petit mot ? </h3>
                <h3>C'est Par ici !</h3>
            </div>



            <div class="w-50 mx-auto pb-5">
                {{ form_start(contactForm) }}
                    {{ form_row(contactForm.nom, {'attr': {'placeholder': 'Votre Nom... ', 'required':'required'}}) }}
                    {{ form_row(contactForm.prenom, {'attr': {'placeholder': 'Votre prenom... ', 'required':'required'}}) }}
                    {{ form_row(contactForm.email, {'attr': {'placeholder': 'Adresse mail... ', 'required':'required'}}) }}
                    {{ form_row(contactForm.object, {'attr': {'placeholder': 'Object du message... ', 'required':'required'}}) }}
                    {{ form_row(contactForm.message, {'attr': {'placeholder': 'Laissez un mot... ', 'required':'required'}}) }}
                    

                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn bg-marron w-25 font-weight-bold text-light mt-3">
                            Envoyer 
                        </button>
                    </div>
                {{ form_end(contactForm) }}
            </div>
        </div>

        <div class="row w-100 m-0 about-us">
            <div class="col-md-12 my-4 px-0">
                <hr class="w-50 bg-marron float-right">
            </div>

            <div class="text-center w-100">
                <h2 class="font-weight-bold">QUI SOMMES NOUS ?</h2>
            </div>

            <div class="col-md-12 my-4 px-0">
                <hr class="w-50 bg-marron float-left">
            </div>

        </div>

